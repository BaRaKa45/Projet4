{% extends 'layout.html.twig' %}

{% block layout %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}

    <div class="jumbotron">
        <div class="row">
            <h1 class="text-center col-12">CONNEXION</h1>
        </div>
        <form action="{{ path('security_login') }}" method="post">
            <fieldset>
                <div class="form-group offset-1 col-10">
                    <label for="username">Pseudonyme</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                           class="form-control"/>
                </div>
                <div class="form-group offset-1 col-10">
                    <label for="password" class="far">Mot de passe</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="far fa-envelope"></i></div>
                        </div>
                        <input type="password" id="password" name="_password" class="form-control"/>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <button type="submit" class="btn btn-danger offset-1 col-10 mt-4 p-3">
                    <i class="fa fa-sign-in" aria-hidden="true"></i>Valider
                </button>
            </fieldset>
        </form>
    </div>
{% endblock %}