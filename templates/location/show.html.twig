{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Bedroom</th>
                <td>{{ location.bedroom }}</td>
            </tr>
            <tr>
                <th>Bed</th>
                <td>{{ location.bed }}</td>
            </tr>
            <tr>
                <th>Bathroom</th>
                <td>{{ location.bathroom }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ location.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ location.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ location.price }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ location.startDate ? location.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ location.endDate ? location.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('location_index') }}">back to list</a>

    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}