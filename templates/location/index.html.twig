{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <h1>Location index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Bedroom</th>
                <th>Bed</th>
                <th>Bathroom</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.bedroom }}</td>
                <td>{{ location.bed }}</td>
                <td>{{ location.bathroom }}</td>
                <td>{{ location.title }}</td>
                <td>{{ location.description }}</td>
                <td>{{ location.price }}</td>
                <td>{{ location.startDate ? location.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ location.endDate ? location.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('location_show', {'id': location.id}) }}">show</a>
                    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('location_new') }}">Create new</a>
{% endblock %}